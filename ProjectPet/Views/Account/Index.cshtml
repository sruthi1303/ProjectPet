@model ProjectPet.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Purple Pets | Admin</title>
    <meta charset="utf-8">
    <link rel="icon" href="~/images/favicon.ico">
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <link rel="stylesheet" href="~/css/Homestyle.css">
    <link rel="stylesheet" href="~/css/form.css">
    <script src="~/js/jquery.js"></script>
    <script src="~/js/forms.js"></script>
    <script src="~/js/jquery-migrate-1.1.1.js"></script>
    <script src="~/js/superfish.js"></script>
    <script src="~/js/jquery.equalheights.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/jquery.ui.totop.js"></script>
    <script>
        jQuery(document).ready(function () {
            $().UItoTop({
                easingType: 'easeOutQuart'
            });
        });
    </script>
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <link rel="stylesheet" media="screen" href="css/ie.css">
    <![endif]-->
</head>
<body>
    

        <div class="main">
            <canvas id="myCanvas"></canvas>
            <div class="main-w3l">
                <h1 Style="color:brown" class="logo-w3">Welcome To Purple Pets</h1>
                <div class="w3layouts-main2">
                    <h3>Register Now</h3>
                    <form action="#" method="post">

                        <label for="User_Name"><b>Enter Name</b></label>
                        @Html.EditorFor(model => model.User_Name, new { httpAttributes = new { @class = "Cntrol col-md-2" } })

                        <label for="User_Email"><b>Email</b></label>
                        @Html.EditorFor(model => model.User_Email, new { httpAttributes = new { @class = "Cntrol col-md-2" } })



                        <label for="Password"><b>Enter Password</b></label>
                        @Html.EditorFor(model => model.Password, new { httpAttributes = new { @class = "Cntrol col-md-2" } })

                        <label for="Re_Password"><b>Confirm Password</b></label>
                        @Html.EditorFor(model => model.Re_Password, new { httpAttributes = new { @class = "Cntrol col-md-2" } })

                        <input type="submit" value="Register" name="register">
                    </form>
                </div>
                <div class="clear"></div>
                <!-- //main -->

            </div>
        </div>


        <!--scripts-->
        <!-- js -->
        <script type="text/javascript" src="js/jquery-2.1.4.min.js"></script>
        <!-- //js -->
        <!-- particles-JavaScript -->
        <script src="js/particles.min.js"></script>
        <script>
            window.onload = function () {
                Particles.init({
                    selector: '#myCanvas',
                    color: '#eba7a7',
                    connectParticles: true,
                    minDistance: 90
                });
            };
        </script>

        <!-- //particles-JavaScript -->
        <!--//scripts-->
    </body>
</html>