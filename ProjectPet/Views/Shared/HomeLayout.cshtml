                            <li>@Html.ActionLink("Services", "services")</li>
                            <li> @Html.ActionLink("Contact", "contacts") </li>
                            <li> @Html.ActionLink("Log Out", "Login", "Account") </li>
                        </ul>
                    </nav>
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </header>
   
    <div>
        @RenderBody()
    </div>
</body>
</html>